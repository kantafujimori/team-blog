.contents
  - @tweets.each do |tweet|
    .content
      .name
        = link_to "#{tweet.user.name}", "/users/#{tweet.user_id}", class: "link__name"
      %p.text
        = tweet.text
        - if tweet.image.present?
          = image_tag "#{tweet.image}"
      %ul.lists
        - if user_signed_in?
          - if tweet.user_id == current_user.id
            %li.lists__title
              = link_to "コメント", "/tweets/#{tweet.id}", class: "link"
            %li.lists__title
              = link_to "編集", "/tweets/#{tweet.id}/edit", class: "link"
            %li.lists__title
              = link_to "消去", "/tweets/#{tweet.id}", method: :delete, class: "link"
          - else
            %li.lists__title
              = link_to "コメント", "/tweets/#{tweet.id}", class: "link"
