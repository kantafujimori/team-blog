.contents
  - @tweets.each do |tweet|
    .content
      .name
        = link_to "#{tweet.user.name}", root_path, class: "link__name"
      %p.text
        = tweet.text
        - if tweet.image.present?
          = image_tag "#{tweet.image}"
      %ul.lists
        - if user_signed_in?
          %li.lists__title
            = link_to "コメント", "", class: "link"
          %li.lists__title
            = link_to "編集", "/tweets/#{tweet.id}/edit", class: "link"
          %li.lists__title
            = link_to "消去", "/tweets/#{tweet.id}", method: :delete, class: "link"
